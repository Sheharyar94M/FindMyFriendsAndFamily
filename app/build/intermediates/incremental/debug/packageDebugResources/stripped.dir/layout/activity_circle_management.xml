<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreen.ui.FragmentLocation.Settings.CircleManagement.CircleManagementActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_circle_management"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/orange"
        android:paddingStart="@dimen/_5sdp"
        android:paddingEnd="@dimen/_5sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="Circle Management"
        app:titleTextColor="@color/white"/>

    <TextView
        android:id="@+id/text_circle_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/circle_details"
        android:textColor="#80000000"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_circle_management"/>

    <TextView
        android:id="@+id/text_edit_circle_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:drawablePadding="@dimen/_10sdp"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:text="@string/edit_circle_name"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        app:drawableStartCompat="@drawable/edit_phone_no"
        app:layout_constraintStart_toStartOf="@id/text_circle_details"
        app:layout_constraintTop_toBottomOf="@id/text_circle_details"
        app:layout_constraintWidth_percent="0.9"/>

    <TextView
        android:id="@+id/text_bottom_line_1"
        android:layout_width="0dp"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/drawable_line_bottom_sheet"
        android:backgroundTint="#33687384"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_edit_circle_name"
        app:layout_constraintWidth_percent="0.95"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_circle_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="text_circle_details,text_edit_circle_name,text_bottom_line_1"/>

    <TextView
        android:id="@+id/text_circle_management"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="@string/circle_management"
        android:textColor="#80000000"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_bottom_line_1"/>

    <TextView
        android:id="@+id/text_add_members"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:drawablePadding="@dimen/_10sdp"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:text="@string/add_circle_members"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        app:drawableStartCompat="@drawable/add_button"
        app:layout_constraintStart_toStartOf="@id/text_circle_management"
        app:layout_constraintTop_toBottomOf="@id/text_circle_management"
        app:layout_constraintWidth_percent="0.9"/>

    <TextView
        android:id="@+id/text_bottom_line_2"
        android:layout_width="0dp"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/drawable_line_bottom_sheet"
        android:backgroundTint="#33687384"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_add_members"
        app:layout_constraintWidth_percent="0.95"/>

    <TextView
        android:id="@+id/text_view_members"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:drawablePadding="@dimen/_10sdp"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:text="@string/view_members"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        app:drawableStartCompat="@drawable/view_members"
        app:layout_constraintStart_toStartOf="@id/text_add_members"
        app:layout_constraintTop_toBottomOf="@id/text_bottom_line_2"
        app:layout_constraintWidth_percent="0.9"/>

    <TextView
        android:id="@+id/text_bottom_line_3"
        android:layout_width="0dp"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/drawable_line_bottom_sheet"
        android:backgroundTint="#33687384"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_members"
        app:layout_constraintWidth_percent="0.95"/>

    <TextView
        android:id="@+id/text_leave_circle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:drawablePadding="@dimen/_10sdp"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:text="@string/leave_circle"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        app:drawableStartCompat="@drawable/leave_circle"
        app:layout_constraintStart_toStartOf="@id/text_add_members"
        app:layout_constraintTop_toBottomOf="@id/text_bottom_line_3"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_not_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="text_view_members,text_bottom_line_3, text_leave_circle"
        tools:visibility="gone"/>

    <TextView
        android:id="@+id/text_remove_members"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:drawablePadding="@dimen/_10sdp"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:text="@string/remove_circle_members"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        app:drawableStartCompat="@drawable/delete_account"
        app:layout_constraintStart_toStartOf="@id/text_add_members"
        app:layout_constraintTop_toBottomOf="@id/text_bottom_line_2"
        app:layout_constraintWidth_percent="0.9"/>

    <TextView
        android:id="@+id/text_bottom_line_4"
        android:layout_width="0dp"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/drawable_line_bottom_sheet"
        android:backgroundTint="#33687384"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_remove_members"
        app:layout_constraintWidth_percent="0.95"/>

    <TextView
        android:id="@+id/text_delete_circle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:drawablePadding="@dimen/_10sdp"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:text="@string/delete_circle"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        app:drawableStartCompat="@drawable/delete_account"
        app:layout_constraintStart_toStartOf="@id/text_add_members"
        app:layout_constraintTop_toBottomOf="@id/text_bottom_line_4"
        app:layout_constraintWidth_percent="0.9" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="text_remove_members,text_bottom_line_4,text_delete_circle"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.ads.nativetemplates.TemplateView
        android:id="@+id/ad_template"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:gnt_template_type="@layout/gnt_medium_template_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>