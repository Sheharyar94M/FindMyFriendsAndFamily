<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_contact"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="UseCompatTextViewDrawableXml">

    <TextView
        android:id="@+id/txt_contact_letters"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/drawable_circle_safety_frag"
        android:gravity="center"
        android:text="@string/cn"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:backgroundTint="@color/orange"/>

    <TextView
        android:id="@+id/txt_contact_name"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:text="@string/contact_name"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/txt_contact_letters"
        app:layout_constraintTop_toTopOf="@id/txt_contact_letters"/>

    <TextView
        android:id="@+id/txt_contact_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:text="@string/phone_no"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/txt_contact_letters"
        app:layout_constraintTop_toBottomOf="@id/txt_contact_name" />

    <TextView
        android:id="@+id/txt_contact_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_15sdp"
        android:drawableStart="@drawable/ic_add"
        android:drawablePadding="@dimen/_5sdp"
        android:gravity="center_vertical"
        android:text="@string/add"
        android:textAllCaps="true"
        android:textColor="@color/orange"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        app:drawableTint="@color/orange"
        app:layout_constraintBottom_toBottomOf="@id/txt_contact_letters"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_contact_letters" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/drawable_line_bottom_sheet"
        android:backgroundTint="@color/orange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_contact_no"
        app:layout_constraintWidth_percent="0.95"/>

</androidx.constraintlayout.widget.ConstraintLayout>