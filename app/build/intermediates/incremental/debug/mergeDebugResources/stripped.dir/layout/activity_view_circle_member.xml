<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreen.ui.FragmentLocation.Settings.CircleManagement.ViewMember.ViewCircleMemberActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_view_members"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:paddingStart="@dimen/_5sdp"
        android:paddingEnd="@dimen/_5sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="View Members"
        app:titleTextColor="@color/white"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_delete_members"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/adaptiveBanner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_view_members"
        tools:itemCount="5"
        tools:listitem="@layout/layout_view_circle_member"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/no_results"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:elevation="15dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/adaptiveBanner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_view_members"
        app:lottie_rawRes="@raw/no_search_result" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/no_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_members_to_display"
        android:textAllCaps="false"
        android:textColor="@color/orange"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/no_results" />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/recycler_delete_members"
        app:layout_constraintEnd_toEndOf="@+id/recycler_delete_members"
        app:layout_constraintStart_toStartOf="@+id/recycler_delete_members"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_view_members" />

    <!--Adaptive Banner-->
    <FrameLayout
        android:id="@+id/adaptiveBanner"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/background_ads_adaptive_banner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>