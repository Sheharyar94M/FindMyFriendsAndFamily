<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreen.ui.subscription.SubscriptionFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical">

        <!--Adaptive Banner-->
        <FrameLayout
            android:id="@+id/adaptiveBanner"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/background_ads_adaptive_banner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </FrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/features"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/adaptiveBanner"
            tools:ignore="RtlSymmetry"
            tools:itemCount="3"
            tools:listitem="@layout/features_itemview" />

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_layout_features"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/adaptiveBanner"
            android:layout_marginTop="5dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <include
                    android:id="@+id/item1_feat"
                    layout="@layout/features_itemview_shimmer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <include
                    android:id="@+id/item2_feat"
                    layout="@layout/features_itemview_shimmer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"/>

                <include
                    android:id="@+id/item3_feat"
                    layout="@layout/features_itemview_shimmer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

            </LinearLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>

        <RelativeLayout
            android:id="@+id/nothing_found_layout_features"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/features"
            app:layout_constraintEnd_toEndOf="@+id/features"
            app:layout_constraintStart_toStartOf="@+id/features"
            app:layout_constraintTop_toTopOf="@+id/features">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/no_results_features"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:elevation="15dp"
                app:lottie_rawRes="@raw/no_search_result" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/nothingFoundFeatures"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/no_results_features"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:fontFamily="@font/inter_semibold"
                android:padding="5dp"
                android:text="@string/no_items_found"
                android:textColor="@color/orange"
                android:textSize="16sp" />
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/productList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@+id/text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/features"
            tools:itemCount="3"
            tools:listitem="@layout/subscriptionlist_itemview" />

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_layout_products"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/features"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <include
                    android:id="@+id/item1_prod"
                    layout="@layout/subscriptionlist_itemview_shimmer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <include
                    android:id="@+id/item2_prod"
                    layout="@layout/subscriptionlist_itemview_shimmer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"/>

                <include
                    android:id="@+id/item3_prod"
                    layout="@layout/subscriptionlist_itemview_shimmer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

            </LinearLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>

        <RelativeLayout
            android:id="@+id/nothing_found_layout_products"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/productList"
            app:layout_constraintEnd_toEndOf="@+id/productList"
            app:layout_constraintStart_toStartOf="@+id/productList"
            app:layout_constraintTop_toTopOf="@+id/productList">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/no_results_products"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:elevation="15dp"
                app:lottie_rawRes="@raw/no_search_result" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/nothingFoundProducts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/no_results_products"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:fontFamily="@font/inter_semibold"
                android:padding="5dp"
                android:text="@string/no_subscriptions_found"
                android:textColor="@color/orange"
                android:textSize="16sp" />

        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:gravity="center"
            android:padding="5dp"
            android:text="FMF Terms and Privacy Policy"
            android:textAlignment="center"
            android:textColor="#8C8A8A"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/text1"
            app:layout_constraintEnd_toEndOf="@+id/start_trial_button"
            app:layout_constraintStart_toStartOf="@+id/start_trial_button" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:gravity="center"
            android:text="Get 7 days for free."
            android:textAlignment="center"
            android:textColor="#8C8A8A"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/price_month"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/price_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/then_rs_3_075_month_cancel_anytime"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/start_trial_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/start_trial_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/round_button_orange"
            android:elevation="15dp"
            android:text="Start a free trial"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>