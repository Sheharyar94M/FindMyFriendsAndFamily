<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SharedPreference.ResetPassword.ByPhoneNo.OTPActivity">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/img_view_icon"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_margin="30dp"
        android:src="@drawable/icon_otp_screen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundPercent="0.5" />

    <TextView
        android:id="@+id/txt_title_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="@string/title_otp"
        android:textColor="@color/black"
        android:textSize="@dimen/_18ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_view_icon"/>

    <TextView
        android:id="@+id/txt_sub_title_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/sub_title_otp"
        android:textAlignment="center"
        android:textColor="@color/darkGrey"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_title_otp"/>

    <TextView
        android:id="@+id/txt_view_phone_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintBottom_toTopOf="@+id/flow_pin_view_otp"
        app:layout_constraintEnd_toEndOf="@id/txt_sub_title_otp"
        app:layout_constraintStart_toStartOf="@id/txt_sub_title_otp"
        app:layout_constraintTop_toBottomOf="@id/txt_sub_title_otp"
        tools:text="+923456789"/>

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow_pin_view_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:padding="@dimen/_5sdp"
        app:constraint_referenced_ids="edit_input_1,edit_input_2,edit_input_3,edit_input_4,edit_input_5,edit_input_6"
        app:flow_horizontalGap="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_view_phone_no"/>

    <EditText
        android:id="@+id/edit_input_1"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_50sdp"
        android:autofillHints="@null"
        android:background="@drawable/pin_view_state_list"
        android:cursorVisible="true"
        android:gravity="center"
        android:hint="@null"
        android:inputType="number"
        android:maxLength="1"
        android:padding="@dimen/_5sdp"
        android:textColor="@color/orange"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edit_input_2"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_50sdp"
        android:autofillHints="@null"
        android:background="@drawable/pin_view_state_list"
        android:cursorVisible="true"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:padding="@dimen/_5sdp"
        android:textColor="@color/orange"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edit_input_3"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_50sdp"
        android:autofillHints="@null"
        android:background="@drawable/pin_view_state_list"
        android:cursorVisible="true"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:padding="@dimen/_5sdp"
        android:textColor="@color/orange"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edit_input_4"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_50sdp"
        android:autofillHints="@null"
        android:background="@drawable/pin_view_state_list"
        android:cursorVisible="true"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:padding="@dimen/_5sdp"
        android:textColor="@color/orange"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edit_input_5"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_50sdp"
        android:autofillHints="@null"
        android:background="@drawable/pin_view_state_list"
        android:cursorVisible="true"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:padding="@dimen/_5sdp"
        android:textColor="@color/orange"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edit_input_6"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_50sdp"
        android:autofillHints="@null"
        android:background="@drawable/pin_view_state_list"
        android:cursorVisible="true"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:padding="@dimen/_5sdp"
        android:textColor="@color/orange"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txt_view_helper_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:text="@string/didn_t_receive_otp_code"
        android:textColor="@color/darkGrey"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/flow_pin_view_otp"/>

    <TextView
        android:id="@+id/txt_view_resend_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resend_code_in"
        android:textColor="@color/darkGrey"
        android:textSize="@dimen/_12ssp"/>

    <TextView
        android:id="@+id/txt_view_otp_count_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/darkGrey"
        android:textSize="@dimen/_12ssp"
        tools:text="in 60 seconds" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow_resend_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        app:constraint_referenced_ids="txt_view_resend_otp,txt_view_otp_count_down"
        app:flow_horizontalGap="@dimen/_3sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_view_helper_one"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_verify_otp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/disabled_round_button"
        android:enabled="false"
        android:text="@string/verify_otp"
        android:textColor="@color/orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/flow_resend_otp"
        app:layout_constraintWidth_percent="0.8"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/flow_pin_view_otp"
        app:layout_constraintEnd_toEndOf="@+id/flow_pin_view_otp"
        app:layout_constraintStart_toStartOf="@+id/flow_pin_view_otp"
        app:layout_constraintTop_toTopOf="@+id/flow_pin_view_otp" />

</androidx.constraintlayout.widget.ConstraintLayout>